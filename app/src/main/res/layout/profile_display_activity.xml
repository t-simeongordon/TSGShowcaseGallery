<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Tester.ProfileDetails" tools:layout_editor_absoluteY="81dp">

    <TextView
            android:id="@+id/user_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/user_name_tv_resource"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="48dp" app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="@string/user_surname_tv_resource"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/user_surname_tv"
            android:layout_marginTop="72dp"
            app:layout_constraintTop_toBottomOf="@+id/user_name_tv"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <TextView
            android:text="@string/user_age_tv_resource"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/user_age_tv"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="72dp"
            app:layout_constraintTop_toBottomOf="@+id/user_surname_tv"/>
    <TextView
            android:text="@string/user_address_tv_resource"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/user_address_tv_resource"
            android:layout_marginTop="60dp"
            app:layout_constraintTop_toBottomOf="@+id/user_age_tv"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>

</android.support.constraint.ConstraintLayout>